# We use a little hack so that the snippet is expanded
# and parsed correctly
snippet s "snippet" !
`!p snip.rv = "snippet"` ${1:trigger} "${2:name}" ${3:b}
$0
`!p snip.rv = "endsnippet"`
endsnippet

snippet g "global snippet" !
`!p snip.rv = "global"` !p
$0
`!p snip.rv = "endglobal"`
endsnippet

snippet v "${VISUAL}" i
\$\{VISUAL${1:${2:default}${3:/transform/}}\}
endsnippet

